# Global Configuration Template for Prompt Optimizer MCP CLI
# Copy this file to one of the following locations:
# - ~/.prompt-optimizer.env
# - ~/.config/prompt-optimizer/.env
# - %APPDATA%\prompt-optimizer\.env (Windows)

# ===== LLM API Key Configuration =====
# Configure your API keys for global CLI usage

# OpenAI API Configuration
MCP_OPENAI_API_KEY=your-openai-api-key-here

# Google Gemini API Configuration  
MCP_GEMINI_API_KEY=your-gemini-api-key-here

# ZhiPu AI API Configuration
MCP_ZHIPU_API_KEY=your-zhipu-api-key-here

# ===== MCP Server Configuration =====

# Preferred model provider (openai, gemini, deepseek, siliconflow, zhipu, custom)
MCP_DEFAULT_MODEL_PROVIDER=openai

# HTTP Server Port (default 3000)
MCP_HTTP_PORT=3000

# Log Level (debug, info, warn, error)
MCP_LOG_LEVEL=info

# Default Language (zh, en)
MCP_DEFAULT_LANGUAGE=en

# ===== Content Generation Settings =====

# Enable content generation features
ENABLE_CONTENT_GENERATION=true

# Content generation timeout in milliseconds
CONTENT_GENERATION_TIMEOUT=120000

# Maximum content iterations
MAX_CONTENT_ITERATIONS=10

# ===== Multi-Agent Settings =====

# Enable multi-agent functionality
ENABLE_MULTI_AGENT=true

# Maximum concurrent agents
MAX_CONCURRENT_AGENTS=5

# Agent timeout in milliseconds
AGENT_TIMEOUT=300000

# ===== Advanced Features =====

# Enable advanced tools
ENABLE_ADVANCED_TOOLS=true

# Tool timeout in milliseconds
TOOL_TIMEOUT=60000

# Maximum tool concurrency
MAX_TOOL_CONCURRENCY=10

# Enable video processing
ENABLE_VIDEO_PROCESSING=true

# Enable speech recognition
ENABLE_SPEECH_RECOGNITION=true

# Speech recognition model
SPEECH_RECOGNITION_MODEL=whisper-large

# ===== Security Settings =====

# Access username for protected deployments
ACCESS_USERNAME=admin

# Access password (leave empty for no password protection)
ACCESS_PASSWORD=